@model CrudMVC.Models.ImageImplementation.Laptop
@{
    ViewData["Title"] = "Add Laptop";

}
<h1>Add Laptop</h1>
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-dark p-4 rounded-top">
            <h1 class="text-center text-info">Update laptop Details</h1>
            <form method="post" asp-action="Edit"  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input type="text" asp-for="Brand" class="form-control" placeholder="Enter Brand Name" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                    <input type ="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea rows="2" cols="10" asp-for="Description" class="form-control" placeholder="Enter Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="row">
                    <div class="col-8">
                        <label asp-for="ImagePath"></label>
                        <input type="file" class="form-control" asp-for="ImagePath" id="ChooseImg" />
                    </div>
                    <div class="col-4">
                        <img src="/Content/Laptop/@Model.Path" asp-append-version="true" style="width:100px;height:100px;border:1px solid red;border-radius:10px;padding:10px;" alt="Laptop image" id="PrevImg" />
                    </div>
                </div>
                <div class="form-group m-4">
                    <input type="submit" class="btn btn-group-sm btn-primary float-right" value="Update" />
                </div>
                <a class="btn btn-sm btn-warning p-2 m-2" asp-action="Index" asp-controller="Laptop">Back to list</a>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/laptop.js"></script>
}
